@page "/"

<PageTitle>Index</PageTitle>

<MudGrid>
    <MudItem xs="12" sm="6" md="6" lg="3">
        <MudCard>
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Secondary">I</MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">Space X</MudText>
                    <MudText Typo="Typo.body2">In Galaxy</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
